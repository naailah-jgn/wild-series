{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
	<button type="button" class="btn btn-dark mb-4 mt-4">
		<a href="{{ path('program_index') }}">
			Retour à la liste des programmes
		</a>
	</button>

	<div class="row justify-content-around">
		<div class="col-4 card mb-3">
			<h3 class="card-header">{{ program.title }}</h3>
			<div class="card-body">
				<h5 class="card-title">Catégorie :
					{{ program.category.name }}</h5>
				<h6 class="card-subtitle text-muted">{{ program.synopsis }}</h6>
			</div>
			<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
			<div class="card-body">
				{% for season in program.seasons %}

					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							<a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id } ) }}">
								Saison
								{{ season.number }}
							</a>
						</li>
						<li class="list-group-item">{{season.year}}</li>
						<li class="list-group-item">{{ season.description }}</li>
					</ul>
				</div<divclass="card-body">
			{% endfor %}
			<a href="#" class=" card-link">Card link</a>
			<a href="#" class="card-link">Another link</a>
		</div>
	</div>
{% endblock %}
