{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	<h1 class="text-center">Toutes les s√©ries:
	</h1>
</br>
{% for program in programs %}
	<div class="container">
		<div class="row justify-content-around">
			<div class="col-4">
				<div class="card text-white bg-secondary mb-3" style=" max-width-20rem;s">
					<div class="card-header">
						<h4 class="card-title">{{ loop.index }}
							/
							{{ program.title }}</h4>
					</div>
					<p class="card-text mt-4">{{ program.synopsis }}</p>
					<button type="button" class="btn btn-dark mb-4 mt-4">
						<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
					</button>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
