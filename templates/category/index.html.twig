{% extends 'base.html.twig' %}

{% block title %}Toutes les Catégories
{% endblock %}

{% block body %}
	<div class="col-6 d-flex justify-content-center pt-5 pb-5">
		<h3>Catégories :</h3>
	</div>

	<div class="container-sm list-group">
		{% for category in categories %}
			<div class="row w-50 list-group-item list-group-item-action flex-column align-items-start pr-5" style="width:300px">
				<div class="col col-md">
					<h4 class="mb-1">
						{{ loop.index }}
						/
						{{ category.name}}
					</h4>
					<a href="{{ path("category_show", {categoryName: category.name}) }}">Voir la fiche</a>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
