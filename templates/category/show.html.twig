{% extends 'base.html.twig' %}

{% block title %}Catégorie{{ category.name }}
{% endblock %}

{% block body %}
	{% for program in programs %}
		<ul>
			<li>
				<h2>{{program.title}}</h2>
				<p>{{program.synopsis}}</p>
				<img src="{{ asset('/build/images/' ~ program.poster) }}" alt="poster"/>
				<a href="{{ path("program_show", {id: program.id}) }}">Voir la fiche</a>
			</li>
		</ul>
		{% else %}Aucune série trouvée.
	{% endfor %}
	<a href="{{ path("category_index") }}">Retour à la liste des catégories</a>
{% endblock %}
